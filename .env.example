# Freshed Grocery Environment Configuration
# Copy this file to .env and fill in your actual values

# App Configuration
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME="Freshed Grocery Tanzania"

# ClickPesa Payment Gateway Configuration
# Get these from your ClickPesa dashboard: https://dashboard.clickpesa.com
VITE_CLICKPESA_API_KEY=your_clickpesa_api_key_here
VITE_CLICKPESA_MERCHANT_ID=your_merchant_id_here
VITE_CLICKPESA_PAY_BILL_NUMBER=your_pay_bill_number_here
VITE_CLICKPESA_BASE_URL=https://api.clickpesa.com
VITE_CLICKPESA_WEBHOOK_SECRET=your_webhook_secret_here

# ClickPesa Environment (set to 'false' for production)
VITE_CLICKPESA_DEMO_MODE=false

# Optional: For development/testing
# VITE_CLICKPESA_DEMO_MODE=true

# Database Configuration (if using external database)
# VITE_DATABASE_URL=your_database_url_here

# SMS/Email Service (for notifications)
# VITE_SMS_API_KEY=your_sms_service_api_key
# VITE_EMAIL_API_KEY=your_email_service_api_key

# Admin Configuration
VITE_ADMIN_EMAIL=admin@freshed.co.tz
VITE_ADMIN_PASSWORD=your_secure_admin_password
